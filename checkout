#!/bin/bash

rootDir=`pwd`

submoduleArray=( $(dirname $(find . \( -path *.git \) -a -prune -o -name src -a -not -path ./src -printf "%P ") | xargs echo) )
branchName=$1

git checkout $branchName
for element in "${submoduleArray[@]}"; do
	cd $rootDir
	cd $element
	echo "In submodule $(basename $element)"
	git checkout $branchName
done